    <form action="/delete/customers" method="POST">
        <select name="CardID">
            <% for (var i=0; i< item.length; i++){%>
                 <option value="<%= item[i].CardID %>"><%= item[i].CardID %></option>
            <%}%>
        </select>
        <input type="submit" name="Submit" class = "submit"> 
    
    </form>
